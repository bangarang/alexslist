<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel"><%= @listing.title %></h4>
    </div>
    <div class="modal-body">
      <% if (@listing.image_file_name) %>
        <%= image_tag @listing.image.url %>
      <% end %>
      <p>
        <strong>Description:</strong>
        <%= @listing.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency(@listing.price) %>
      </p>

      <p>
        <strong>Views:</strong>
        <%= @listing.count %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @listing.status %>
      </p>

      <p>
        <strong>Expiry date:</strong>
        <%= @listing.expiry_date.to_time.strftime('%a, %e %b %Y at %l:%M %p') %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @listing.user.name %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @listing.category.name %>
      </p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
     <% if (user_signed_in? && current_user == @listing.user) %>
      <%= link_to 'Edit', edit_listing_path(@listing), :class => "btn btn-primary" %> 
    <% end %>
    </div>
  </div>
</div>