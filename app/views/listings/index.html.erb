<div class="container">
  <h1>Listings</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Status</th>
        <th>Expiry date</th>
        <th>User</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= link_to listing.title, listing_path(listing), remote: true, :class => "listing-link" %></td>
          <td><%= listing.description %></td>
          <td><%= listing.price %></td>
          <td><%= listing.status %></td>
          <td><%= listing.expiry_date %></td>
          <td><%= listing.user.name %></td>
          <td><%= listing.category.name %></td>

          <% if (user_signed_in? && current_user == listing.user) %>
            <td><%= link_to 'Show', listing %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if (user_signed_in?) %>
    <%= link_to 'New Listing', new_listing_path %>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="listing-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>